{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "commonjs",
        // "typeRoots": ["./node_modules/@types", "./types"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "stripInternal": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        // "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true
    },
    "compileOnSave": true,
    "file": ["src/index.ts"]
}
